<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1,viewport-fit=cover" />
  <title>login page</title>
  <link href="css/login.css" rel="stylesheet" />
</head>
<body>
  <div class="app">
    <main class="phone">
      <!-- 顶部栏 -->
      <header class="topbar" role="banner">
        <button class="back" aria-label="返回" onclick="location.href='/'">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
               stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M15 18l-6-6 6-6"/>
          </svg>
        </button>
        <div class="title">Login</div>
      </header>

      <!-- 内容 -->
      <section class="content">
        <!-- 添加 form 标签，指定提交地址和方法 -->
        <form action="/login" method="POST" class="stack">
          <div class="field">
            <label for="email">Email address</label>
            <input class="input" id="email" name="email" type="email" placeholder="name@example.com" value="" autocomplete="username" required>
          </div>

          <div class="field">
            <label for="password">Password</label>
            <input class="input" id="password" name="password" type="password" placeholder="" autocomplete="current-password" required>
          </div>

          <!-- 去掉 onclick 事件，type 设置为 submit -->
          <button class="btn btn-primary" id="loginBtn" type="submit">Login</button>

          <div class="divider">OR</div>

          <!-- 三方登录卡片保持不变 -->
          <div class="oauth-list">
            <button class="oauth-btn" onclick="oauth('facebook')">
              <svg viewBox="0 0 24 24" aria-hidden="true">
                <rect width="18" height="18" x="3" y="3" rx="4" fill="#1877F2"/>
                <path d="M15 8h-2a2 2 0 0 0-2 2v2H9v3h2v6h3v-6h2.1l.4-3H14v-1c0-.3.2-1 1-1h1V8z" fill="#fff"/>
              </svg>
              Continue through Facebook
            </button>
          </div>

          <div class="legal">We will not disclose any information without your permission.</div>
        </form>
      </section>
    </main>
  </div>
<script src="/js/login.js"></script>
</body>
</html>
